extends layout

block content
	div(class='container')
		h1= title
		if api
			div(class='resultsContainer')
				p This is a list of objects (primarily asteroids), ordered by day, that will make near-Earth passes inside the next week.
				div(class='buttonContainer')
					button(class='buttonHazardOnly') Show Only Hazardous
					button(class='buttonNearOnly') Show Only Near-Misses
				div(id='loading')
					h1(style='text-align:center;') Loading
				table(id='neoTable')
					tr(id='topRow')
						td(colspan='10')
